{
  "name": "jmon-studio",
  "type": "module",
  "version": "1.5.30",
  "description": "Complete JMON (JSON Music Object Notation) studio: format conversion, algorithmic composition, and music visualization (JavaScript version)",
  "main": "./dist/jmon.umd.js",
  "module": "./dist/jmon.esm.js",
  "browser": "./dist/jmon.umd.js",
  "exports": {
    ".": {
      "import": "./dist/jmon.esm.js",
      "require": "./dist/jmon.umd.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE",
    "schemas/**/*"
  ],
  "scripts": {
    "build": "vite build",
    "copy-files": "mkdir -p dist && cp -r src/* dist/ && cp src/format/*.js dist/format/ 2>/dev/null || true",
    "test": "node tests/run-all.cjs",
    "dev": "vite",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "music",
    "jmon",
    "tone.js",
    "abc",
    "notation",
    "composition",
    "algorithmic",
    "audio",
    "synthesis",
    "observable",
    "djalgo",
    "fractals",
    "cellular-automata",
    "genetic-algorithms",
    "generative-art"
  ],
  "author": "jmonlabs",
  "license": "MIT",
  "peerDependencies": {
    "plotly.js": "^2.0.0",
    "tone": "^14.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "jsdom": "^27.0.0",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "ajv": "^8.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/essicolo/jmon-studio.git"
  },
  "bugs": {
    "url": "https://github.com/essicolo/jmon-studio/issues"
  },
  "homepage": "https://github.com/essicolo/jmon-studio#readme",
  "volta": {
    "node": "24.7.0",
    "npm": "11.5.1"
  }
}
